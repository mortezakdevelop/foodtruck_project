<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/checkBox"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_5sdp"
        app:srcCompat="@drawable/selector_circle_check_box"/>

    <TextView
        android:id="@+id/tv_food_type"
        android:textSize="15sp"
        android:fontFamily="@font/main_font_bold"
        android:textColor="@color/black"
        android:text="Breakfast"
        app:layout_constraintTop_toTopOf="@id/checkBox"
        android:paddingStart="@dimen/_24sdp"
        app:layout_constraintStart_toEndOf="@id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingStart="@dimen/_24sdp"
        android:fontFamily="@font/main_font"
        android:textSize="11sp"
        android:textColor="#F9683B"
        android:text="At restaurant until 13:45 pm"
        app:layout_constraintStart_toStartOf="@id/tv_food_type"
        app:layout_constraintBottom_toBottomOf="@id/checkBox"
        android:id="@+id/tv_food_time"
        app:layout_constraintTop_toBottomOf="@id/tv_food_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>