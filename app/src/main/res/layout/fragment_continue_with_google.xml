<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.entry.ContinueWithGoogleFragment">

   <include
       android:id="@+id/toolbar"
       layout="@layout/toolbar_main"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       />

    <TextView
        android:textColor="#181725"
        android:textSize="26sp"
        android:text="@string/loging"
        android:layout_marginTop="124dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:id="@+id/tv_logged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_subtitle_loging"
        android:textColor="#7c7c7c"
        android:textSize="14sp"
        android:text="@string/enter_your_emails_and_password"
        app:layout_constraintStart_toStartOf="@id/tv_logged"
        app:layout_constraintTop_toBottomOf="@id/tv_logged"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="42dp"
        app:layout_constraintStart_toStartOf="@id/tv_subtitle_loging"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle_loging"
        android:text="@string/email"
        android:textSize="16sp"
        android:textColor="#7c7c7c"
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="11dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/tv_email"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintStart_toStartOf="@id/et_email"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:id="@+id/tv_password"
        android:textColor="#181725"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_marginTop="31dp"
        android:id="@id/tv_password"
        android:text="Password"
        android:textSize="16sp"
        android:textColor="#7c7c7c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        android:textColor="#181725"
        android:inputType="textPassword"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/et_password"
        android:text="Forgot Password?"
        android:textColor="#181725"
        android:gravity="end"
        android:id="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Log In"
        android:textAllCaps="false"
        android:background="@drawable/btn_google_login_shape_bg"
        app:layout_constraintTop_toBottomOf="@id/tv_forgot_password"
        android:id="@+id/btn_log_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


 <androidx.constraintlayout.widget.ConstraintLayout
     app:layout_constraintTop_toBottomOf="@id/btn_log_in"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     android:layout_width="wrap_content"
     android:layout_marginTop="26dp"
     android:layout_height="wrap_content">

  <TextView
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:textColor="@color/black"
      android:textSize="14dp"
      android:text="Don't have an account?"
      android:id="@+id/tv_dont_have_account"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      app:layout_constraintStart_toEndOf="@id/tv_dont_have_account"
      app:layout_constraintTop_toTopOf="@id/tv_dont_have_account"
      app:layout_constraintBottom_toBottomOf="@id/tv_dont_have_account"
      android:textColor="#F9683B"
      android:textSize="14sp"
      android:paddingStart="1dp"
      android:id="@+id/tv_dont_have_account_sign_up"
      android:text="Signup"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

 </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>