<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/home_recycler_shape"
        android:layout_height="133dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_popular_food"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/activities_food_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_chinies_food"
            android:text="Chinies Food Are"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toEndOf="@id/iv_popular_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintStart_toStartOf="@id/tv_chinies_food"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toBottomOf="@id/tv_chinies_food"
            android:text="more healthy"
            android:id="@+id/tv_more_healthy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_in_this_essay"
            android:textSize="@dimen/_8ssp"
            app:layout_constraintStart_toStartOf="@id/tv_more_healthy"
            app:layout_constraintTop_toBottomOf="@id/tv_more_healthy"
            android:text="In this essay we decied"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintTop_toBottomOf="@id/tv_in_this_essay"
            app:layout_constraintStart_toStartOf="@id/tv_in_this_essay"
            android:text="to talk about chinies..."
            android:textSize="@dimen/_8ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/btn_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/btn_read_shape"
            android:paddingStart="14dp"
            android:paddingTop="7dp"
            android:paddingEnd="14dp"
            android:paddingBottom="7dp"
            android:text="Read"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tv_more_healthy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.86"
            app:layout_constraintStart_toEndOf="@+id/tv_chinies_food"
            app:layout_constraintTop_toBottomOf="@id/tv_chinies_food"
            app:layout_constraintVertical_bias="0.606" />

