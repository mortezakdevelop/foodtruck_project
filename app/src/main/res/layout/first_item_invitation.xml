<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_recycler_shape"
    android:layout_height="81dp">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:src="@drawable/coin_image"
        android:id="@+id/iv_coin"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:text="Your bank"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_coin"
        app:layout_constraintStart_toEndOf="@id/iv_coin"
        app:layout_constraintTop_toTopOf="@id/iv_coin"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        app:layout_constraintStart_toStartOf="@id/tv_bank_name"
        app:layout_constraintTop_toBottomOf="@id/tv_bank_name"
        android:text="until 1 march 2020"
        android:textSize="14sp"
        android:id="@+id/tv_sub_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="20dp"
        android:text=" RM 1,158"
        android:textStyle="bold"
        android:padding="15dp"
        android:textColor="#F9683B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_back_inventory"
        android:background="@drawable/your_bank_icon_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>