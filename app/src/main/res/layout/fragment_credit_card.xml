<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.profileFragments.HelpFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_main" />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/main_font_bold"
            android:text="@string/credit_card"
            android:textColor="@color/text_black"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/bg_card_round_10sdp"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_paypal_logo"
                android:tint="@color/black" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:fontFamily="@font/main_font_bold"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="20sp"
                tools:text=".... .... .... 8752" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_font_bold"
                    android:gravity="start"
                    android:text="Afsar Hossen"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/main_font_bold"
                    android:gravity="end"
                    android:text="12/25"
                    android:textColor="@color/text_black"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_number"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/main_font"/>

        <EditText
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/cardNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:hint=".... .... .... ...."
            android:inputType="numberSigned"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_gray" />

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/separator_color"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/expiry_date"
                    android:textSize="16sp"
                    android:textColor="@color/text_gray"
                    android:fontFamily="@font/main_font"/>

                <TextView
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/expiryDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:hint="12/25"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_gray" />

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/separator_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/secure_code"
                    android:textSize="16sp"
                    android:textColor="@color/text_gray"
                    android:fontFamily="@font/main_font"/>

                <EditText
                    android:textSize="18sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/secureCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:hint="875"
                    android:inputType="numberSigned"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_gray" />

                <View
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/separator_color"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_on_card"
            android:textSize="16sp"
            android:layout_marginTop="@dimen/_15sdp"
            android:textColor="@color/text_gray"
            android:fontFamily="@font/main_font"/>

        <EditText
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:hint="@string/name_on_card"
            android:inputType="text"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/text_gray" />

        <View
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/separator_color"/>

    </LinearLayout>
    <TextView
        android:id="@+id/login"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:background="@drawable/bg_primary_round_10sdp"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/main_font"/>

</LinearLayout>